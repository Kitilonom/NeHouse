<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/UserID"
        android:layout_width="300dp"
        android:layout_weight="1"
        android:layout_margin="25dp"
        android:background="@drawable/button_desidn"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:id="@+id/AccName"
        android:gravity="center"
        android:layout_height="25dp"
        android:layout_width="300dp"
        android:layout_weight="1"
        android:text="Name"
        android:background="@drawable/button_desidn" />

    <TextView
        android:id="@+id/GroupName"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_height="25dp"
        android:layout_width="300dp"
        android:layout_weight="1"
        android:text="Group"
        android:background="@drawable/button_desidn" />

    <TextView
        android:id="@+id/AccDateOfBirth"
        android:gravity="center"
        android:layout_height="25dp"
        android:layout_margin="25dp"
        android:layout_width="300dp"
        android:layout_weight="1"
        android:ems="10"
        android:background="@drawable/button_desidn"
        android:text="Date of birth"/>

    <TextView
        android:id="@+id/AccProfileEmail"
        android:gravity="center"
        android:layout_height="25dp"
        android:layout_width="300dp"
        android:layout_weight="1"
        android:ems="10"
        android:text="Email"
        android:background="@drawable/button_desidn"/>

    <TextView
        android:id="@+id/AccProfilePhone"
        android:gravity="center"
        android:layout_margin="25dp"
        android:layout_height="25dp"
        android:layout_width="300dp"
        android:layout_weight="1"
        android:ems="10"
        android:text="Phone number"
        android:background="@drawable/button_desidn"/>

    <Button
        android:id="@+id/ProfileEdit"
        android:layout_width="250dp"
        android:layout_weight="1"
        android:layout_height="25dp"
        android:gravity="center"
        android:background="@drawable/button_desidn"
        android:text="Edit Profile"
        android:onClick="SettingsEditProfile"
        />

    <Button
        android:id="@+id/PasswordChangingButton"
        android:layout_width="250dp"
        android:layout_weight="1"
        android:layout_margin="25dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:background="@drawable/button_desidn"
        android:text="log out"
        android:onClick="SettingsLogOut"
        />

</LinearLayout>
